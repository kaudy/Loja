<div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title"><strong>Sign in </strong></h3>
            <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>
        </div>

        <div class="panel-body">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% if error %}
                    <div></div>
                    <div class="alert alert-danger">
                        <a class="close" data-dismiss="alert" href="#">Ã—</a>{{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <div style="margin-bottom: 12px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="usuario ou e-mail">                                        
                </div>

                <div style="margin-bottom: 12px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>                    
                    <input type="password" id="password" name="_password" class="form-control" placeholder="senha"/>
                </div>

                <div class="input-group">
                    <div class="checkbox" style="margin-top: 0px;">
                        <label>
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Me lembrar
                            
                        </label>
                    </div>
                </div>                
                <button type="submit" class="btn btn-success">Entrar</button>
            </form>
        </div>
    </div>
</div>
